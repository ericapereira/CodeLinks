<div class="new-mssg">
  <h1>New Message</h1>
  <%= form_tag conversations_path, method: :post do %>
  <div class="send-to">
    Recipient:
    <br>
    <%= select_tag :user_id, options_from_collection_for_select(@recipients , :id, :name) %>
  </div>

  <div class="subject">
     <%= text_field_tag :subject,nil , placeholder: "Subject" %>
  </div>

  <div class="body">
     <%= text_area_tag :body, nil, placeholder: "Body" %>
  </div>
<br>
  <%= submit_tag "Send" %>

  <%end %>
</div>
